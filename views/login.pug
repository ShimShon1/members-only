extends layout
block content
 h1 Login
 form(action="" method="post")
  label(for="username") Username:
   input(type="text" name="username" id="username") 
  label(for="password") Password:
   input(type="password" name="password" id="password") 
  button.submit-btn Submit 
  if errors
   ul 
    for error in errors 
     li.error=error.msg